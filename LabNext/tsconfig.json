{
  "compilerOptions": {
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "outDir": "dist",
    "target": "es3",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ]
}
